{
    "bugs": "https://github.com/gingerbeardman/Macros/issues",
    "description": "Record and replay macros in Nova editor",
    "funding": "https://ko-fi.com/gingerbeardman",
    "homepage": "https://www.gingerbeardman.com",
    "identifier": "com.gingerbeardman.macros",
    "name": "Macros",
    "organization": "gingerbeardman",
    "repository": "https://github.com/gingerbeardman/Macros",
    "version": "1.0.0",
    
    "categories": ["sidebars"],
    
    "main": "main.js",
    
    "activationEvents": [
        "onLanguage:*"
    ],
    
    "config": [
        {
            "title": "Recording",
            "type": "section",
            "children": [
                {
                    "key": "com.gingerbeardman.macros.compressMacro",
                    "title": "Compress Macro",
                    "description": "Sequences of actions of the same type are grouped together to reduce the total number of actions in the macro.\n\nNote: if you want to see the macro type character-by-character disable this setting, but be aware macros will become very large.",
                    "type": "boolean",
                    "default": true
                }
            ]
        },
        {
            "title": "Playback",
            "type": "section",
            "children": [
                {
                    "key": "com.gingerbeardman.macros.slowPlayback",
                    "title": "Adjust Playback Speed",
                    "type": "boolean",
                    "default": false
                },
                {
                    "key": "com.gingerbeardman.macros.slowPlaybackSpeed",
                    "title": "Playback Speed (ms)",
                    "type": "enum",
                    "radio": false,
                    "values": ["25", "50", "75", "100", "200", "300", "400", "500", "750", "1000"],
                    "default": "100"
                }
            ]
        }
    ],

    "sidebars": [
        {
            "id": "com.gingerbeardman.macros.sidebar",
            "name": "Macros",
            "smallImage": "sidebar-small",
            "smallSelectedImage": "sidebar-small-selected",
            "largeImage": "sidebar-medium",
            "largeSelectedImage": "sidebar-medium-selected",
            "sections": [
                {
                    "id": "com.gingerbeardman.macros.sidebar",
                    "name": "Macros",
                    "allowMultiple": false,
                    "placeholderText": "No macros have been recorded.",
                    "placeholderImage": "sidebar-large",
                    "headerCommands": [
                        {
                            "title": "Play",
                            "image": "__builtin.next",
                            "tooltip": "Replay Selected",
                            "command": "com.gingerbeardman.macros.replayMacro",
                            "when": "viewItem != null"
                        },
                        {
                            "title": "Record",
                            "image": "__builtin.add",
                            "tooltip": "Start Recording",
                            "command": "com.gingerbeardman.macros.startRecording",
                            "when": "!isRecording"
                        },
                        {
                            "title": "Delete",
                            "image": "__builtin.remove",
                            "tooltip": "Delete Selected",
                            "command": "com.gingerbeardman.macros.removeMacro",
                            "when": "viewItem != null"
                        }
                    ],
                    "contextCommands": [
                        {
                            "title": "Replay",
                            "command": "com.gingerbeardman.macros.replayMacro",
                            "when": "viewItem != null"
                        },
                        {
                            "title": "Rename",
                            "command": "com.gingerbeardman.macros.renameMacro",
                            "when": "viewItem != null"
                        },
                        {
                            "title": "Delete",
                            "command": "com.gingerbeardman.macros.removeMacro",
                            "when": "viewItem != null"
                        }
                    ]
                }
            ]
        }
    ],
    
    "commands": {
        "editor": [
            {
                "title": "Toggle Macro Recording",
                "command": "com.gingerbeardman.macros.toggleRecording",
                "shortcut": "cmd-alt-m"
            },
            {
                "title": "Replay Last Macro",
                "command": "com.gingerbeardman.macros.replayLastMacro",
                "shortcut": "cmd-shift-m"
            }
        ],
        "sidebar": [
            {
                "title": "Toggle Expansion",
                "command": "com.gingerbeardman.macros.toggleExpansion"
            }
        ]
    }
}